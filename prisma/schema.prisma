generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String
  cpf       String
  password  String
  role      String
  address   Address?
  createdAt String   @map("created_at")

  @@map("user")
}

model Address {
  id       String @id
  district String
  road     String
  number   Int
  user     User   @relation(fields: [userId], references: [id])
  userId   String @unique

  @@map("address")
}
