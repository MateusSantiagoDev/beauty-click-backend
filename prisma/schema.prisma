generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String
  cpf      String
  password String
  role     String

  addresses Address[]

  createdAt DateTime? @map("created_at")
  updatedAt DateTime? @map("updated_at")

  @@map("user")
}

model Address {
  id       String @id
  name     String
  image    String
  cep      String
  district String
  road     String
  number   Int

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @unique @map("user_id")

  createdAt DateTime? @map("created_at")
  updatedAt DateTime? @map("updated_at")

  @@map("address")
}
